{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Car Rental App",
  "short_name": "CarRental",
  "description": "Ứng dụng thuê xe trực tuyến - Đặt xe dễ dàng, nhanh chóng và an toàn",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1f2937",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "vi",
  "categories": ["travel", "transportation", "business"],
  "icons": [
    {
      "src": "/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/images/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard của ứng dụng thuê xe"
    }
  ],
  "shortcuts": [
    {
      "name": "Đặt xe",
      "short_name": "Đặt xe",
      "description": "Đặt xe nhanh chóng",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/favicon.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    }
  ]
}
